<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="0dp"
        android:weightSum="100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="50"
            android:text="Location:"
            android:textColor="@color/colorBlackDark"/>
        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:checked="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:weightSum="100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="50"
            android:text="Location radius:"
            android:textColor="@color/colorBlackDark"/>
        <SeekBar
            android:id="@+id/simpleSeekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:weightSum="100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="35"
            android:text="News layout:"
            android:textColor="@color/colorBlackDark"/>

        <RadioGroup
            android:id="@+id/radioNewsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radioGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Grid"
                android:textColor="@color/colorBlackDark"
                android:checked="true" />
            <RadioButton
                android:id="@+id/radioList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="78dp"
                android:text="List"
                android:textColor="@color/colorBlackDark"
                android:checked="true" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:weightSum="100">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_weight="67.1"
            android:text="Theme:"
            android:textColor="@color/colorBlackDark"/>-->

        <Switch
            android:id="@+id/toggleTheme"
            android:text="Theme:"
            android:textColor="@color/colorBlackDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="80"
            android:orientation="horizontal">
            <!--<RadioButton
                android:id="@+id/radioBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Blue"
                android:textColor="@color/colorBlackDark"
                android:checked="true" />
            <RadioButton
                android:id="@+id/radioGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="Green"
                android:textColor="@color/colorBlackDark"/>-->
        </Switch>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:weightSum="100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="23.3"
            android:text="Notification:"
            android:textColor="@color/colorBlackDark"/>

        <CheckBox
            android:id="@+id/checkBoxSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginLeft="50dp"
           android:layout_weight="33.3"
            android:text="Sound"
            android:textColor="@color/colorBlackDark"/>
        <CheckBox
            android:id="@+id/checkBoxVibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="33.3"
            android:layout_marginLeft="50dp"
            android:text="Vibration"
            android:textColor="@color/colorBlackDark"/>
    </LinearLayout>

</RelativeLayout>